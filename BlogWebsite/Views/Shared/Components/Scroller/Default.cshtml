@model IList<BlogWebsite.Core.Entities.Category>
<div class="nav-scroller py-1 mb-2">
    <nav class="nav d-flex justify-content-between">
        @if (Model.Count > 0)
        {
            @foreach (var category in Model)
            {
                <a class="p-2 text-muted" asp-action="category"
                                           asp-controller="blog"
                                           asp-route-category="@category.Slug">@category.Name</a>
            }
        }
    </nav>
</div>