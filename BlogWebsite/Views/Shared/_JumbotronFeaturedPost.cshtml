@using Microsoft.AspNetCore.Mvc.Localization
@inject IViewLocalizer Localizer

@model BlogWebsite.Core.Entities.Post

<div class="jumbotron p-4 p-md-5 text-white rounded bg-dark">
    <div class="col-md-6 px-0">
        <h1 class="display-4 font-italic">@Model.Title</h1>
        <p class="lead my-3">@Model.Description</p>
        <p class="lead mb-0">
            <a class="text-white font-weight-bold" asp-action="post"
                                                   asp-controller="blog"
                                                   asp-route-year="@Model.PublishedOn.Year"
                                                   asp-route-month="@Model.PublishedOn.Month"
                                                   asp-route-title="@Model.Slug">@Localizer["Continue reading..."]
            </a>
        </p>
    </div>
</div>